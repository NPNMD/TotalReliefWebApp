rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // Admins can read all profiles
      allow read: if isOwner(userId) || isAdmin();
      
      // Only admins can create new users
      allow create: if isAdmin();
      
      // Users can update their own profile (except role and critical fields)
      // Admins can update any user
      allow update: if isAdmin() || 
                      (isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email']));
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Calls collection
    match /calls/{callId} {
      // Participants (caller or recipient) can read their calls
      allow read: if isAuthenticated() && 
                     (resource.data.callerId == request.auth.uid || 
                      resource.data.recipientId == request.auth.uid);
      
      // Participants can create calls where they are the caller
      allow create: if isAuthenticated() && 
                       request.resource.data.callerId == request.auth.uid;
      
      // Participants can update their calls (for status changes, answering, etc.)
      allow update: if isAuthenticated() && 
                       (resource.data.callerId == request.auth.uid || 
                        resource.data.recipientId == request.auth.uid);
      
      // Participants can delete their calls
      allow delete: if isAuthenticated() && 
                       (resource.data.callerId == request.auth.uid || 
                        resource.data.recipientId == request.auth.uid);
    }
    
    // Presence collection
    match /presence/{userId} {
      // All authenticated users can read presence
      allow read: if isAuthenticated();
      
      // Users can only write their own presence
      allow write: if isOwner(userId);
    }
    
    // Deny all other access by default
  }
}
